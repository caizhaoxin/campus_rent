.details { background-color : #f0f0f0; }
.details .slider { height : 750rpx; background-color : #f0f0f0; }
.details .slider image { width : 100%; height : 100%; }

.details .info { background-color: #fff; border : solid 1px #eee; border-width : 1px 0; padding : 10rpx 0; }
.details .info .mod { padding : 10rpx 20rpx; }
.details .info .title { font-size : 32rpx; }
.details .info .price { color : #f5692e; font-size : 24rpx; }
.details .info .price .strong { display: inline; font-size : 48rpx; margin-left : 5rpx; font-weight : bold; }
.details .info .subinfo { font-size : 24rpx; color : gray; }

.details .info-module { margin-top: 20rpx; background-color: #fff; }
.details .info-module .title { padding : 20rpx; border-left: solid 6rpx #f5692e; color : #f5692e; font-size : 32rpx; }

.details .spec .table { display: flex; flex-wrap : wrap; border-top : solid 1px #eee; } 
.details .spec .table .cell { width : 50%; border-right : 1px; font-size : 24rpx; }
.details .spec .table .cell view { border : solid 1px #eee; border-width : 0 1px 1px 0; padding : 20rpx; }

.details .more { margin-bottom : 100rpx; }
.details .more image { width : 750rpx; }

.details .toolbar { border-top: solid 1px #eee; background-color: #fff; height : 100rpx; width : 100%; position: fixed; bottom : 0; left : 0; }
.details .toolbar .cart-area { position: relative; height: 60rpx; width : 60rpx; padding : 20rpx; margin-left: 20rpx; display: inline-block; }
.details .toolbar .cart-area .num { background-color: #eb2243; color : #fff; width : 36rpx; height : 36rpx; border-radius : 50%; text-align: center; line-height: 36rpx; font-size : 20rpx; position: absolute; left : 50%; margin-left : 5rpx; top : 15rpx; }
.details .toolbar .button { background-color: #ff712b; height : 100%; width : 220rpx; color : #fff; font-size : 28rpx; float : right; line-height: 100rpx; text-align: center; }